<div class="panel panel-default">

<div class="panel-body">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
      <%= image_tag auction.image.url(:medium) %>
        <td><%= auction.title %></td>
        <td><%= auction.description %></td>
        <td><%= auction.price %></td>
        <td><%= auction.user.email if auction.user %></td>
        <td><%= link_to 'Show', auction %></td>
        <% if auction.user == current_user %>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="panel-footer">
<%= link_to 'New Auction', new_auction_path %>
</div>
